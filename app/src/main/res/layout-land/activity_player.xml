<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:card_view="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/parent_view"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:background="#000000">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:controller_layout_id="@layout/player_controls"
            android:layout_gravity="center">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_container">
        </FrameLayout>
    </com.google.android.exoplayer2.ui.SimpleExoPlayerView>

    <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="start"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:id="@+id/recommendation_view">
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recommendation_timer" android:max="5000" android:progress="100"/>
        <ImageView
                android:layout_gravity="center"
                android:id="@+id/recommendation_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:contentDescription="@string/recommendation_thumbnail"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:weightSum="1"
                  android:baselineAligned="false"
                  android:gravity="end">

        <android.support.v7.widget.RecyclerView android:id="@+id/chat_view"
                                                android:divider="#fff"
                                                android:layout_weight=".4"
                                                android:layout_width="0dip"
                                                android:layout_height="match_parent"
                                                android:padding="10dp"
                                                android:requiresFadingEdge="vertical"
                                                android:fadingEdgeLength="10dp"
                                                android:fillViewport="false"
                                                android:fadingEdge="horizontal"
                                                android:layout_gravity="end"/>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:paddingBottom="0dp"
            android:elevation="0dp">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="0dp"
                app:cardCornerRadius="4dp"
                card_view:cardElevation="0dp"
                card_view:cardBackgroundColor="@android:color/transparent"
                card_view:contentPadding="5dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_goneMarginBottom="16dp">

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/reaction_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:overScrollMode="never"
                    android:elevation="0dp" />

        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>