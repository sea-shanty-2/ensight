<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:id="@+id/leaderboard_fraq"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:weightSum="8">
        <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rank"
                    android:padding="4dp"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/rank"
                      android:text="@string/loading"
                      android:padding="4dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/total_score"
/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/total_score"
                    android:text="@string/loading"/>
        </LinearLayout>

        <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/percentile"
                    android:padding="4dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/loading"
                    android:padding="4dp"
                    android:paddingBottom="0dp"
                    android:id="@+id/percentile"/>
        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/leaderboard_chart"
                android:layout_weight="2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:paddingTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>