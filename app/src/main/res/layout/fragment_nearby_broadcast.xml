<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selected"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/broadcast_outer_layout">

    <ImageView
            android:id="@+id/broadcast_thumbnail"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:contentDescription="@string/placeholder"
    />

    <LinearLayout android:id="@+id/linearLayout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:layout_below="@id/broadcast_thumbnail">

        <ImageView android:id="@+id/recommended_star"
                   android:layout_width="16dp"
                   android:layout_height="16dp"
                   android:background="@drawable/ic_star_black_24dp"
                   android:padding="4dp"
                   android:contentDescription="@string/recommended"/>

        <TextView android:id="@+id/viewer_count_nearby"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableStart="@drawable/ic_person_red_24dp"
                  android:text="@string/_0" />
    </LinearLayout>

</RelativeLayout>