<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/parent_view"
             android:background="#000000">
    <net.ossrs.yasea.SrsCameraView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/camera_view"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:weightSum="1"
                  android:baselineAligned="false"
                  android:gravity="end">

        <android.support.v7.widget.RecyclerView android:id="@+id/chat_view"
                                                android:divider="#fff"
                                                android:layout_weight=".4"
                                                android:layout_width="0dip"
                                                android:layout_height="match_parent"
                                                android:padding="5dp"
                                                android:requiresFadingEdge="vertical"
                                                android:fadingEdgeLength="50dp"
                                                android:fillViewport="false"
                                                android:fadingEdge="horizontal"
                                                android:layout_gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/live_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_gravity="start|top"
            android:layout_margin="12dp"
            android:background="@drawable/rounded_live"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/live"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="@dimen/viewer_count_size"
                android:layout_height="@dimen/viewer_count_size"
                android:src="@drawable/red_user_simple"/>

            <TextView
                android:id="@+id/viewer_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text=""/>

        </LinearLayout>

    </LinearLayout>
    


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_container">
    </FrameLayout>


</FrameLayout>