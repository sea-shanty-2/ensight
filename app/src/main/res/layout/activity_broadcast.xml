<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/parent_view"
             android:background="#000000">
    <net.ossrs.yasea.SrsCameraView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/camera_view"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:weightSum="1"
                  android:baselineAligned="false"
                  android:gravity="end">

        <android.support.v7.widget.RecyclerView android:id="@+id/chat_view"
                                                android:divider="#fff"
                                                android:layout_weight=".4"
                                                android:layout_width="0dip"
                                                android:layout_height="match_parent"
                                                android:padding="10dp"
                                                android:requiresFadingEdge="vertical"
                                                android:fadingEdgeLength="10dp"
                                                android:fillViewport="false"
                                                android:fadingEdge="horizontal"
                                                android:layout_gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/live_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_gravity="start|top"
            android:layout_margin="6dp"
            android:background="@drawable/rounded_live"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/live"
            android:visibility="gone"/>

        <TextView android:id="@+id/viewer_count"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableStart="@drawable/ic_person_red_24dp"
                  android:textSize="16sp"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:textColor="@color/white"
                  android:textAlignment="center"
                  android:gravity="center_vertical"
                  android:layout_gravity="center_vertical"
                  android:textStyle="bold"
                  android:layout_marginEnd="10dp"
                  android:text="" />

        <TextView android:id="@+id/like_ratio"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableStart="@drawable/ic_thumb_up_24dp"
                  android:textSize="16sp"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:textColor="@color/white"
                  android:textAlignment="center"
                  android:gravity="center_vertical"
                  android:layout_gravity="center_vertical"
                  android:textStyle="bold"
                  android:text="13%" />
    </LinearLayout>
    


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_container">
    </FrameLayout>


</FrameLayout>