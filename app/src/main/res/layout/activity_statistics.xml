<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticsActivity">

    <TextView
        android:id="@+id/viewership_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:text="Viewership"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/viewership_fragment"
        android:name="dk.cs.aau.envue.ViewershipActivity"
        android:layout_width="match_parent"
        android:layout_height="351dp"
        android:layout_below="@+id/viewership_text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/viewership_text" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/close_statistics_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"/>

</android.support.constraint.ConstraintLayout>