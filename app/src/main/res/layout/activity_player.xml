<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/player_linear_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_height="wrap_content"
              android:layout_width="match_parent" android:orientation="vertical">

    <dk.cs.aau.envue.views.CustomPlayerView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:controller_layout_id="@layout/player_controls"
            android:layout_gravity="center"
            android:background="@color/black">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_container">
        </FrameLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="bottom|start"
                      android:orientation="horizontal"
                      android:padding="16dp">
            <ImageView android:id="@+id/reaction_add"
                       android:layout_width="32dp"
                       android:layout_height="32dp"
                       android:layout_gravity="bottom|start"
                       android:alpha="0.5"
                       android:background="@drawable/ic_emoticon_white_24dp"
                       android:contentDescription="@string/react"/>
            <ImageView android:layout_width="32dp"
                       android:id="@+id/report_stream"
                       android:layout_height="32dp"
                       android:layout_gravity="bottom|start"
                       android:alpha="0.5"
                       android:background="@drawable/ic_report_white_24dp"
                       android:contentDescription="@string/report"/>
        </LinearLayout>
    </dk.cs.aau.envue.views.CustomPlayerView>

    <android.support.v7.widget.CardView
            android:id="@+id/streams_card"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            app:cardCornerRadius="4dp"
            android:layout_margin="5dp"
            card_view:contentPadding="5dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/nearby_broadcasts_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:requiresFadingEdge="horizontal"
                    android:fadingEdgeLength="4dp"
                    android:layout_gravity="center_horizontal"
                    android:dividerHeight="1dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id="@+id/reaction_card"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            app:cardCornerRadius="4dp"
            android:layout_margin="5dp"
            card_view:contentPadding="5dp"
            android:visibility="gone">
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/reaction_view"
                android:layout_height="48dp"
        />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id="@+id/chat_card"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            app:cardCornerRadius="4dp"
            android:layout_margin="5dp"
            card_view:contentPadding="5dp">
        <LinearLayout
                android:id="@+id/chat_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:id="@+id/chat_view"
                    android:overScrollMode="never"
                    android:layout_weight="2"
                    android:divider="#fff"
            />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:id="@+id/send_message_layout"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="#fff"
                          android:orientation="horizontal">

                <EditText
                        android:id="@+id/editText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:ems="10"
                        android:hint="@string/write_a_message"
                        android:inputType="textCapSentences"
                        android:imeOptions="actionSend"
                        android:singleLine="true"
                        android:text=""/>
                <Button
                        android:id="@+id/button_chatbox_send"
                        android:text="@string/send"
                        android:textSize="14sp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:enabled="false"
                        android:layout_width="64dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:focusable="true"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>